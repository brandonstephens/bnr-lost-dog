<h1><%= @pet.name %></h1>

<dl>
  <dt>Breed</dt>
  <dd><%= @pet.breed %></dd>

  <dt>Color</dt>
  <dd class="<%= color_to_class(@pet.color) %>"><%= @pet.color %></dd>

  <dt>Last Seen</dt>
  <dd><%= time_ago_in_words @pet.last_seen_at %> ago</dd>
</dl>

<div>
  <%= link_to "Edit", edit_pet_path(@pet), {:class => 'btn btn-default'} %>
</div>

<div>
  <%= link_to "Delete", pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" } %>
</div>

<div>
  <%= link_to "Show All", pets_path, {:class => 'btn btn-default'} %>
</div>