<h1><%= @pet.name %></h1>

<dl>
  <dt>Breed</dt>
  <dd><%= @pet.breed %></dd>

  <dt>Color</dt>
  <dd><%= @pet.color %></dd>

  <dt>Last Seen</dt>
  <dd><%= @pet.last_seen_at %></dd>
</dl>

<div>
  <%= link_to "Edit", edit_pet_path(@pet) %>
</div>

<div>
  <%= link_to "Delete", pet_path(@pet), method: :delete, data: { confirm: "Are you sure?" } %>
</div>

<div>
  <%= link_to "Show All", pets_path %>
</div>